<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.easynews"
       name="Easynews.com"
       version="21.1.1"
       provider-name="xbmc-easynews">
    <requires>
        <import addon="script.module.requests"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="xbmc-easynews.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <license>GPL 2.0</license>
        <assets>
            <icon>icon.png</icon>
        </assets>
        <summary lang="en">Easynews.com - Browse videos from Easynews.com. Account required.</summary>
        <description lang="en">Browse newsgroups as well as search</description>
    </extension>
</addon>
